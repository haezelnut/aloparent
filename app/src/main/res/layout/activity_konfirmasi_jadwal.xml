<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KonfirmasiJadwal">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginHorizontal="30dp"
            android:id="@+id/header_ahli_kesehatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Konfirmasi"
                android:textColor="#515151"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rectangle_orange"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_profil_ahli_kesehatan1"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginVertical="13dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/foto_profil_lesti"
                app:civ_circle_background_color="#75DB85" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/foto_profil_ahli_kesehatan1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Veronika"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_ractangle"
                    android:backgroundTint="#6BBDED"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="Senin"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/btn_ractangle"
                        android:backgroundTint="#6BBDED"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:paddingHorizontal="12dp"
                        android:text="17.00 PM - 18.00 PM"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                    </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="23dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Total Pembayaran"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="15dp"

            />

        <TextView
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_edittext"
            android:elevation="20dp"
            android:text="Rp.55.000"
            android:paddingVertical="15dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="23dp"
            />

        <TextView
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:text="Metode Pembayaran"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="15dp"
            />

        <RelativeLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_edittext"
            android:elevation="20dp"
            android:text="Rp.55.000"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="23dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/logo_bank_mandiri" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_next_btn_blue" />

        </RelativeLayout>

        <TextView
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:text="Petunjuk Pembayaran"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="15dp"
            />

        <Button
            android:layout_marginHorizontal="30dp"
            android:id="@+id/btnPiihJadwal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
           android:layout_alignParentBottom="true"
            android:layout_marginTop="33dp"
            android:background="@drawable/btn_rectangle_orange"
            android:elevation="10dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Bayar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            />
        </LinearLayout>

</ScrollView>