<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.Artikel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/heading"
            android:orientation="horizontal">

            <ImageView
                android:onClick="backFromArtikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/back_btn"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_extrabold"
                android:text="Artikel"
                android:textColor="@color/textcolor_black"
                android:layout_marginStart="125dp"
                android:layout_marginTop="24dp"
                android:textSize="20dp"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:background="@color/white"
            android:onClick="artikel1"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="25dp"
            android:elevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="artikel1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_height="200dp"
                    android:src="@drawable/artikel_1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_gravity="bottom"
                    android:text="Sering Abaikan Pendapat Anak, Ini Bahaya yang Bisa Terjadi"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="16sp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:onClick="artikel2"
            android:background="@color/white"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="25dp"
            android:elevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/artikel_2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_gravity="bottom"
                    android:text="Apa yang Dimaksud dengan Slow Parenting?"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="16sp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:onClick="artikel3"
            android:background="@color/white"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="25dp"
            android:elevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:layout_height="210dp"
                    android:src="@drawable/artikel_3"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_gravity="bottom"
                    android:text="Sering Abaikan Pendapat Anak, Ini Bahaya yang Bisa Terjadi"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="16sp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:onClick="artikel4"
            android:background="@color/white"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="25dp"
            android:elevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="230dp"
                    android:padding="10dp"
                    android:src="@drawable/artikel_4"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_gravity="bottom"
                    android:text="Inilah 5 Tips Agar Si Kecil Berani Tidur Sendirian"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="16sp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>