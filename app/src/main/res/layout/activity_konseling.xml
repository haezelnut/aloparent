<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.Konseling">


   <com.google.android.material.bottomnavigation.BottomNavigationView
       android:id="@+id/bottom_navigation"
       android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/btn_rectangle_orange"
        android:paddingVertical="6dp"
        android:layout_marginBottom="28dp"
        app:itemIconSize="34dp"
        app:itemIconTint="@drawable/navbar_selector"
        app:itemTextColor="@drawable/navbar_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_navigation" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="37dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/ic_jadwal_konseling"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/rectangle_notificaton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Konseling"
                android:textColor="#515151"
                android:textSize="20dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="37dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/ic_chat_konseling"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/rectangle_notificaton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/btn_ractangle"
                android:backgroundTint="#6BBDED"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="67dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Konsultasikan masalah si kecil dengan ahlinya"
                    android:textColor="@color/white"
                    android:textSize="16dp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="173dp"
                android:layout_height="173dp"
                android:src="@drawable/image_header_konseling"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Pilih Ahli Sesuai Kategori"
            android:textSize="15dp"
            android:textColor="#515151"/>

        <GridLayout
            android:id="@+id/grid_main_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:columnCount="3"
            android:columnOrderPreserved="false"
            android:rowCount="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:backgroundTint="@color/white"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:onClick="toKonselingKesehatan"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:background="#6BBDED"
                        android:elevation="10dp"
                        android:src="@drawable/image_konseling_kesehatan"
                        app:contentPadding="5dp"
                        app:contentPaddingTop="5dp"
                        app:shapeAppearanceOverlay="@style/roundImageView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Kesehatan"
                        android:textColor="#5B5B5B"
                        android:textSize="13dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:backgroundTint="@color/white"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:background="#ED6BD0"
                        android:elevation="10dp"
                        android:src="@drawable/image_pendidikan_konseling"
                        app:contentPadding="6dp"
                        app:contentPaddingTop="15dp"
                        app:shapeAppearanceOverlay="@style/roundImageView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Pendidikan"
                        android:textColor="#5B5B5B"
                        android:textSize="13dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:backgroundTint="@color/white"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_gravity="right"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="85dp"
                        android:layout_height="86dp"
                        android:background="#AC6BED"
                        android:elevation="10dp"
                        android:src="@drawable/image_kesehatan_konseling"
                        app:contentPaddingLeft="7dp"
                        app:contentPaddingRight="7dp"
                        app:contentPaddingTop="8dp"
                        app:shapeAppearanceOverlay="@style/roundImageView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Psikologi"
                        android:textColor="#5B5B5B"
                        android:textSize="13dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:backgroundTint="@color/white"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/tebak_makanan_sehat"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:background="#EDD06B"
                        android:elevation="10dp"
                        android:src="@drawable/image_pola_asuh_konseling"
                        app:contentPadding="8dp"
                        app:contentPaddingTop="9dp"
                        app:shapeAppearanceOverlay="@style/roundImageView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Kesehatan"
                        android:textColor="#5B5B5B"
                        android:textSize="13dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:backgroundTint="@color/white"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_marginTop="14dp"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:background="#ED6B6B"
                        android:elevation="10dp"
                        android:src="@drawable/image_teknologi_konseling"
                        app:contentPadding="6dp"
                        app:contentPaddingTop="15dp"
                        app:shapeAppearanceOverlay="@style/roundImageView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Pendidikan"
                        android:textColor="#5B5B5B"
                        android:textSize="13dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:backgroundTint="@color/white"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:orientation="vertical">


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp" />


    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>